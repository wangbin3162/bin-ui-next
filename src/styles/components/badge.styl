.bin-badge {
  position: relative;
  vertical-align: middle;
  display: inline-block;
}
.bin-badge__content {
  background-color: $color-danger;
  border-radius: 10px;
  color: #fff;
  display: inline-block;
  font-size: 12px;
  min-width: 20px;
  height: 20px;
  line-height: 20px;
  padding: 0 6px;
  text-align: center;
  white-space: nowrap;
  border: 1px solid #fff;
  &.is-dot {
    height: 8px;
    width: 8px;
    min-width: 8px;
    padding: 0;
    right: 0;
    border-radius: 50%;
  }
  &.is-fixed {
    position: absolute;
    top: 0;
    right: 10px;
    transform: translateY(-50%) translateX(100%);
    &.is-dot {
      right: 5px;
    }
  }
}

.bin-badge-is-primary {
  background-color: $color-primary;
}
.bin-badge-is-warning {
  background-color: $color-warning;
}

