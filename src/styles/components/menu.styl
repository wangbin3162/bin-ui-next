.bin-menu-wrapper {
  --b-menu-collapse-width: var(--bin-menu-collapse-width);
  --b-menu-padding: var(--bin-menu-padding);
  --b-menu-item-height: var(--bin-menu-item-height);
  --b-menu-item-height-h: var(--bin-menu-item-height-h);
  --b-menu-item-border-radius: var(--bin-menu-item-border-radius);
  --b-menu-item-margin-bottom: var(--bin-menu-item-margin-bottom);
  --b-menu-text-color: var(--bin-menu-text-color);
  --b-menu-text-hover-color: var(--bin-menu-text-hover-color);
  --b-menu-text-active-color: var(--bin-menu-text-active-color);
  --b-menu-bg-color: var(--bin-menu-bg-color);
  --b-menu-bg-hover-color: var(--bin-menu-bg-hover-color);
  --b-menu-bg-active-color: var(--bin-menu-bg-active-color);
}

.bin-menu-wrapper {
  padding: var(--b-menu-padding);
  overflow-x: hidden;
  transition: 0.2s;

  &.is-horizontal {
    padding: 0;
    border-bottom: solid 1px #e6e6e6;
  }

  &.is-collapse {
    padding: 0;
    width: var(--b-menu-collapse-width) !important;
  }
}

.bin-menu-item {
  display: flex;
  align-items: center;
  height: var(--b-menu-item-height);
  line-height: var(--b-menu-item-height);
  font-size: var(--bin-font-size-default);
  border-radius: var(--b-menu-item-border-radius);
  color: var(--b-menu-text-color);
  list-style: none;
  padding: 0 10px;
  margin-bottom: var(--b-menu-item-margin-bottom);
  cursor: pointer;
  position: relative;
  transition: border-color 0.3s, background-color 0.3s, color 0.3s;
  box-sizing: border-box;
  overflow: hidden;
  white-space: nowrap;

  &.is-tooltip {
    padding: 0;

    > div {
      padding-left: 12px !important;
    }
  }

  i {
    position: relative;
    top: -1px;
    color: inherit;
  }

  &:hover, &:focus {
    outline: 0;
    color: var(--b-menu-text-hover-color);
    background: var(--b-menu-bg-hover-color);
  }

  &.is-disabled {
    opacity: 0.25;
    cursor: not-allowed;
    background: 0 0 !important;
  }

  .b-iconfont {
    margin-right: 5px;
    width: 24px;
    text-align: center;
    font-size: 18px;
    vertical-align: middle;
  }

  &.is-active {
    color: var(--b-menu-text-active-color);
    background: var(--b-menu-bg-active-color);

    i {
      color: inherit;
    }
  }

  .bin-tooltip {
    width: 100%;
    height: 100%;
  }
}

.bin-submenu {
  list-style: none;
  margin: 0;
  padding-left: 0;

  &__title {
    position: relative;
    display: flex;
    align-items: center;
    height: var(--b-menu-item-height);
    line-height: var(--b-menu-item-height);
    font-size: var(--bin-font-size-default);
    color: var(--b-menu-text-color);
    padding: 0 10px;
    cursor: pointer;
    border-radius: var(--b-menu-item-border-radius);
    color: var(--b-menu-text-color);
    margin-bottom: var(--b-menu-item-margin-bottom);
    transition: border-color var(--bin-animation-duration-slow), background-color var(--bin-animation-duration-slow), color var(--bin-animation-duration-slow);
    box-sizing: border-box;
    overflow: hidden;
    white-space: nowrap;

    .b-iconfont {
      margin-right: 5px;
      width: 24px;
      text-align: center;
      font-size: 18px;
      vertical-align: middle;
    }

    * {
      vertical-align: middle;
    }

    i {
      color: inherit;
    }

    &:focus, &:hover {
      outline: 0;
      background: var(--bin-color-primary-light6);
    }

    &.is-active, &:hover {
      color: var(--b-menu-text-hover-color);
      background: var(--b-menu-bg-hover-color);
    }

    &.is-active {
      color: var(--b-menu-text-active-color);
      background: var(--b-menu-bg-active-color);
    }
  }

  .bin-submenu__icon-arrow {
    position: absolute;
    top: 50%;
    right: 16px;
    margin-top: -7px;
    transition: transform 0.3s;
    font-size: 12px;
    line-height: 1;
    margin-right: 0;
  }

  &.is-opened > .bin-submenu__title .bin-submenu__icon-arrow {
    transform: rotate(180deg);
  }

  &.is-active {
    > .bin-submenu__title {
      color: var(--b-menu-text-active-color);
    }
  }

  .bin-submenu__icon-arrow {
    right: 8px;
  }
}

.bin-menu-item-group > ul {
  padding: 0;
}

.bin-menu-item-group__title {
  padding: 7px 0 7px 20px;
  line-height: normal;
  font-size: 12px;
  color: var(--bin-color-text-disabled);
  overflow: hidden;
  white-space: nowrap;
}

.bin-menu {
  list-style: none;
  position: relative;
  user-select: none;
  margin: 0;
  padding-left: 0;

  &::before, &::after {
    display: table;
    content: '';
  }

  &::after {
    clear: both;
  }

  &--horizontal {
    border-right: none;

    > .bin-menu-item {
      float: left;
      height: var(--b-menu-item-height-h);
      line-height: var(--b-menu-item-height-h);
      margin: 0;
      border-bottom: 2px solid transparent;
      border-radius: 0;
      padding: 0 20px;

      a, a:hover {
        color: inherit;
      }

      &:not(.is-disabled):hover, &:not(.is-disabled):focus {
        background-color: #fff;
      }

      &.is-active {
        border-bottom: 2px solid var(--bin-color-primary);
        color: var(--bin-color-primary);
      }
    }

    > .bin-submenu {
      float: left;

      &:focus, &:hover {
        outline: none;

        .bin-menu-submenu__title {
          color: var(--bin-color-primary);
        }
      }

      &.is-active {
        .bin-submenu__title {
          border-bottom: 2px solid var(--bin-color-primary);
          color: var(--bin-color-primary);
        }
      }

      .bin-submenu__title {
        height: var(--b-menu-item-height-h);
        line-height: var(--b-menu-item-height-h);
        border-bottom: 2px solid transparent;
        color: var(--b-menu-text-color);
        border-radius: 0;
        margin-bottom: 0;
        padding: 0 20px;

        &:hover {
          background-color: #fff;
        }
      }

      .bin-submenu__icon-arrow {
        position: static;
        vertical-align: middle;
        margin-left: 8px;
        margin-right: 0;
        margin-top: -3px;
      }
    }
  }
}

.bin-menu--popup {
  --b-menu-collapse-width: var(--bin-menu-collapse-width);
  --b-menu-padding: var(--bin-menu-padding);
  --b-menu-item-height: var(--bin-menu-item-height);
  --b-menu-item-height-h: var(--bin-menu-item-height-h);
  --b-menu-item-border-radius: var(--bin-menu-item-border-radius);
  --b-menu-text-color: var(--bin-menu-text-color);
  --b-menu-text-hover-color: var(--bin-menu-text-hover-color);
  --b-menu-text-active-color: var(--bin-menu-text-active-color);
  --b-menu-bg-color: var(--bin-menu-bg-color);
  --b-menu-bg-hover-color: var(--bin-menu-bg-hover-color);
  --b-menu-bg-active-color: var(--bin-menu-bg-active-color);
  z-index: 100;
  min-width: 180px;
  border: none;
  padding: 5px 0;
  border-radius: var(--bin-border-radius-default);
  box-shadow: var(--bin-shadow-down);
  background: var(--b-menu-bg-color);

  .bin-menu-item, .bin-submenu__title {
    height: var(--b-menu-item-height);
    line-height: var(--b-menu-item-height);
    padding: 0 10px;

    &:hover {
      color: var(--b-menu-text-hover-color);
      background: var(--b-menu-bg-hover-color);
    }

    &.is-active {
      color: var(--b-menu-text-active-color);
      background: var(--b-menu-bg-active-color);
    }
  }
}

.bin-submenu-popper.bin-popper.is-light {
  border: none;
}

.bin-menu--collapse {
  width: var(--b-menu-collapse-width);

  .bin-submenu .bin-menu {
    position: absolute;
    margin-left: 5px;
    top: 0;
    left: 100%;
    z-index: 10;
    border: 1px solid #E4E7ED;
    border-radius: 2px;
    box-shadow: 0 2px 12px 0 rgba(0, 0, 0, 0.1);
  }

  > .bin-menu-item, > .bin-submenu > .bin-submenu__title {
    .b-iconfont {
      margin: 0;
      vertical-align: middle;
      width: 24px;
      text-align: center;
    }

    span {
      height: 0;
      width: 0;
      overflow: hidden;
      visibility: hidden;
      display: inline-block;
    }
  }

  .bin-submenu {
    position: relative;
  }

  .bin-submenu__icon-arrow {
    display: none;
  }

  .bin-submenu.is-opened > .bin-submenu__title .bin-submenu__icon-arrow {
    transform: none;
  }

  .bin-submenu__title {
    justify-content: center;
    padding: 0 !important;
  }
}

.horizontal-collapse-transition .bin-submenu__title .bin-submenu__icon-arrow {
  -webkit-transition: 0.2s;
  transition: 0.2s;
  opacity: 0;
}

.bin-opacity-transition {
  -webkit-transition: opacity 0.2s;
  transition: opacity 0.2s;
}
