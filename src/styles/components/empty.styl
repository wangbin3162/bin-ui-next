.bin-empty {
  margin: 0 8px;
  font-size: $base-font-size;
  line-height: 22px;
  text-align: center;
}

.bin-empty-image {
  height: 100px;
  margin-bottom: 8px;
  svg {
    height: 100%;
    margin: auto;
  }
}
.bin-empty-normal {
  margin: 32px 0;
  color: rgba(0, 0, 0, .25);
  .bin-empty-image {
    height: 40px;
  }
}
.bin-empty-img-simple-ellipse {
  fill: #f5f5f5;
}
.bin-empty-img-simple-g {
  stroke: #d9d9d9;
}
.bin-empty-img-simple-path {
  fill: #fafafa;
}
.bin-empty-description {
  margin: 0;
}
