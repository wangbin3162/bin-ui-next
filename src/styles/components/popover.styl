.bin-popover {
  &.bin-popper {
    background: #FFF;
    min-width: 150px;
    border-radius: var(--bin-border-radius-default);
    z-index: 2000;
    color: var(--bin-color-text-default);
    text-align: justify;
    font-size: var(--bin-font-size-default);
    box-shadow: var(--bin-shadow-popper);
    word-break: break-all;
    padding: 12px;

    .bin-popover__title {
      width: 100%;
      line-height: 1;
      margin: 0;
      color: var(--bin-color-text-primary);
      font-weight: 700;
      font-size: var(--bin-font-size-large);
      margin-bottom: 12px;
    }
  }
}
