.bin-slider {
  line-height: normal;

  &__runway {
    width: 100%;
    height: 4px;
    margin: 14px 0;
    background-color: #e8eaec;
    border-radius: var(--bin-border-radius-default);
    position: relative;
    cursor: pointer;
    vertical-align: middle;

    &.disabled {
      cursor: default;

      .bin-slider__bar {
        background-color: var(--bin-color-text-disabled);
      }

      .bin-slider__button {
        border-color: var(--bin-color-text-disabled);
      }

      .bin-slider__button-wrapper {
        &:hover, &.hover {
          cursor: not-allowed;
        }

        &.dragging {
          cursor: not-allowed;
        }
      }

      .bin--slider__button {
        &:hover, &.hover, &.dragging {
          transform: scale(1);
        }

        &:hover, &.hover {
          cursor: not-allowed;
        }

        &.dragging {
          cursor: not-allowed;
        }
      }
    }

    &.show-input {
      margin-right: 110px;
      width: auto;
    }
  }

  &__bar {
    height: 4px;
    background: var(--bin-color-primary-light1);
    border-radius: var(--bin-border-radius-default);
    position: absolute;
  }

  &__button-wrapper {
    position: absolute;
    width: 18px;
    height: 18px;
    text-align: center;
    background-color: transparent;
    top: -4px;
    transform: translateX(-50%);

    .bin-tooltip {
      display: block;
      user-select: none;
    }

    &.dragging {
      cursor: grabbing;
    }
  }

  &__button {
    width: 12px;
    height: 12px;
    border: 2px solid var(--bin-color-primary-light1);
    border-radius: 50%;
    background-color: #fff;
    transition: var(--bin-animation-duration-base) linear;
    outline: 0;

    &:focus, &:hover, &-dragging {
      border-color: var(--bin-color-primary);
      transform: scale(1.5);
    }

    &:hover {
      cursor: grab;
    }
  }

  &__stop {
    position: absolute;
    width: 4px;
    height: 4px;
    border-radius: 50%;
    background-color: #fff;
    transform: translateX(-50%);
  }

  &__input {
    float: right;
    margin-top: -14px;
  }

  &__marks {
    top: 0;
    left: 12px;
    width: 18px;
    height: 100%;

    &-text {
      position: absolute;
      transform: translateX(-50%);
      font-size: var(--bin-font-size-default);
      color: #808695;
      margin-top: 15px;
    }
  }
}
