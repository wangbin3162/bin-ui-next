.bin-form {
  &--label-left .bin-form-item__label {
    text-align: left;
  }
  &--label-top .bin-form-item__label {
    float: none;
    text-align: left;
    line-height: $base-line-height;
  }
  &--inline {
    .bin-form-item {
      display: inline-flex;
      //margin-right: 8px;
      + .bin-form-item {
        margin-left: 8px;
      }
    }
    .bin-form--label-top, .bin-form--item__content {
      display: block;
    }
  }
}

.bin-form-item {
  margin-bottom: 20px;
  &__label {
    text-align: right;
    float: left;
    font-size: $base-font-size;
    color: $color-text-primary;
    line-height: $default-height;
    min-height: $default-height;
    box-sizing: border-box;
    .item-suffix {
      position: relative;
      top: -0.5px;
      margin: 0 8px 0 2px;
    }
  }
  &__content {
    position: relative;
    font-size: $base-font-size;
    min-height: $default-height;
    .bin-checkbox-group, .bin-radio-group {
      padding-top: 4px;
      line-height: $base-line-height;
    }
    .bin-radio-group.bin-radio-group-button {
      padding-top: 0;
    }
    .bin-rate {
      padding-top: 0;
      line-height: $default-height;
    }
    .bin-switch {
      margin-top: 6px;
    }
    .bin-slider-wrapper {
      line-height: normal;
      padding: 1px 0 0 8px;
    }
    > label, > span {
      line-height: $default-height;
    }
  }
  &--large {
    .bin-form-item__label {
      line-height: $large-height;
      min-height: $large-height;
    }
    .bin-form-item__content {
      min-height: $large-height;
      .bin-checkbox-group, .bin-radio-group {
        padding-top: 6px;
      }
      .bin-radio-group.bin-radio-group-button {
        padding-top: 0;
      }
      .bin-rate {
        padding-top: 2px;
        line-height: $large-height;
      }
      .bin-switch {
        margin-top: 8px;
      }
      .bin-slider-wrapper {
        line-height: normal;
        padding: 2px 0 0 8px;
      }
      > label, > span {
        line-height: $large-height;
      }
    }
  }
  &--small {
    .bin-form-item__label {
      line-height: $small-height;
      min-height: $small-height;
    }
    .bin-form-item__content {
      min-height: $small-height;
      .bin-checkbox-group, .bin-radio-group {
        padding-top: 2px;
      }
      .bin-radio-group.bin-radio-group-button {
        padding-top: 0;
      }
      .bin-rate {
        padding-top: 2px;
        line-height: $small-height;
      }
      .bin-switch {
        margin-top: 4px;
      }
      .bin-slider-wrapper {
        line-height: normal;
        padding: 1px 0 0 8px;
        .bin-slider__runway {
          margin: 11px 0;
        }
      }
      > label, > span {
        line-height: $small-height;
      }
    }
  }
  &--mini {
    .bin-form-item__label {
      line-height: $mini-height;
      min-height: $mini-height;
    }
    .bin-form-item__content {
      min-height: $mini-height;
      .bin-checkbox-group, .bin-radio-group {
        padding-top: 0;
      }
      .bin-radio-group.bin-radio-group-button {
        padding-top: 0;
      }
      .bin-rate {
        padding-top: 0;
        line-height: $mini-height;
      }
      .bin-switch {
        margin-top: 2px;
      }
      .bin-slider-wrapper {
        line-height: normal;
        padding: 1px 0 0 8px;
        .bin-slider__runway {
          margin: 10px 0;
        }
      }
      > label {
        line-height: $mini-height;
      }
    }
  }
  &.is-required {
    & > .bin-form-item__label:before,
    & .bin-form-item__label-wrap > .bin-form-item__label:before {
      content: '*';
      display: inline-block;
      margin-right: 4px;
      line-height: $base-line-height;
      font-family: SimSun;
      font-size: $base-font-size;
      color: $color-danger;
    }
    &.is-no-asterisk {
      & > .bin-form-item__label:before,
      & .bin-form-item__label-wrap > .bin-form-item__label:before {
        display: none;
      }
    }
  }
  &__error {
    position: absolute;
    top: 100%;
    left: 0;
    font-size: 12px;
    line-height: 1;
    padding-top: 4px;
    color: $color-danger;
  }
  &__error--inline {
    position: relative;
    top: auto;
    left: auto;
    display: inline-block;
    margin-left: 10px
  }
  // 校验状态icon
  .bin-input__validateIcon {
    display: none;
    height: 14px;
    line-height: 1;
    background-color: #fff;
    &.b-icon-loading {
      color: $color-primary;
    }
    &.b-icon-check-circle {
      color: $color-success;
    }
    &.b-icon-close-circle {
      color: $color-danger;
    }
  }
  .bin-date-editor {
    .b-icon-close-circle-fill {
      z-index: 1;
    }
  }
  .bin-date-editor .bin-input__validateIcon,
  .bin-select .bin-input__validateIcon,
  .bin-cascader .bin-input__validateIcon {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate3d(-50%, -50%, 0);
  }
  &.bin-form-item--feedback {
    .bin-input__validateIcon {
      display: block;
    }
  }
}

// 校验错误控件样式
.bin-form-item.is-error {
  .bin-input {
    border: 1px solid $color-danger;
    &:focus {
      outline: 0;
      box-shadow: 0 0 0 2px $color-input-error-shadow;
    }
  }

  .bin-input-number {
    border: 1px solid $color-danger;
    &-focused {
      border: 1px solid $color-danger;
      outline: 0;
      box-shadow: 0 0 0 2px $color-input-error-shadow;
    }
  }
  .bin-range-editor.bin-input.is-active {
    box-shadow: 0 0 0 2px $color-input-error-shadow;
  }
}
