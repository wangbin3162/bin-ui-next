.bin-desc {
  box-sizing: border-box;
  font-size: $base-font-size;
  color: $color-text-primary;
  &__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16px;
  }
  &__title {
    font-weight: 500;
  }
  &__body {
    color: $color-text-default;
    background-color: #fff;
    table {
      border-collapse: collapse;
      width: 100%;
      border: none;
      td, th {
        background-color: #fff;
        text-align: left;
        font-weight: 400;
        line-height: 1.5;
      }
    }
    :not(.is-bordered) td, :not(.is-bordered) th {
      padding: 0 0 10px 0;
      border: none;
    }
  }
  &__label {
    color: $color-text-primary;
    &:not(.is-bordered-label) {
      &::after {
        content: ':';
        position: relative;
        top: -.5px;
        margin: 0 8px 0 2px;
      }
    }
    &.is-bordered-label {
      background: #fafafa;
    }
  }
  .is-bordered {
    th, td {
      border: 1px solid $border-table-color;
      padding: 10px;
    }
  }

  .bin-desc--large {
    font-size: 14px;
    &.is-bordered {
      th, td {
        padding: 12px 10px;
      }
    }
    &:not(.is-bordered) {
      th, td {
        padding-bottom: 12px;
      }
    }
  }
  .bin-desc--small {
    font-size: 13px;
    &.is-bordered {
      th, td {
        padding: 8px 10px;
      }
    }
    &:not(.is-bordered) {
      th, td {
        padding-bottom: 8px;
      }
    }
  }
  .bin-desc--mini {
    font-size: 12px;
    &.is-bordered {
      th, td {
        padding: 6px 10px;
      }
    }
    &:not(.is-bordered) {
      th, td {
        padding-bottom: 6px;
      }
    }
  }
}
