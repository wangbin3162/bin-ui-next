.bin-checkbox {
  cursor: pointer;
  white-space: nowrap;
  display: inline-block;
  margin-right: 8px;
  user-select: none;
  font-size: $base-font-size;
  line-height: $base-line-height;
  &-group {
    font-size: 0;
  }
  &__label {
    padding: 0 8px;
    vertical-align: middle;
  }
  &__inner {
    display: inline-block;
    width: 16px;
    height: 16px;
    position: relative;
    top: 0;
    left: 0;
    border: $border-base;
    border-radius: $border-base-radius;
    background-color: $color-white;
    transition: border-color $animation-duration-base ease-in-out, background-color $animation-duration-base ease-in-out;
    &:after {
      content: "";
      position: absolute;
      display: table;
      width: 4.714px;
      height: 9.142px;
      top: 6px;
      left: 3px;
      border: 2px solid #fff;
      border-top: 0;
      border-left: 0;
      transform: rotate(45deg) scale(1) translate(-50%, -50%);
      transition: all $animation-duration-base ease-in-out;
      border-top: 0;
      border-left: 0;
    }
  }
  &__input {
    position: relative;
    white-space: nowrap;
    cursor: pointer;
    outline: none;
    display: inline-block;
    line-height: 1;
    vertical-align: middle;
    width: 16px;
    height: 16px;
    &.is-checked {
      .bin-checkbox__inner {
        border-color: $color-primary;
        background-color: $color-primary;
      }
      &:after {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        border: 1px solid $color-primary;
        border-radius: $border-base-radius;
        animation: checkEffect $animation-duration-slow ease-in-out;
        animation-fill-mode: backwards;
        content: '';
      }
    }
    &.is-disabled {
      cursor: not-allowed;
      .bin-checkbox__inner {
        background-color: #f3f3f3;
        border-color: #dcdee2;
        &:after {
          border-color: #f3f3f3;
        }
      }
      &.is-checked {
        &:after {
          border-color: #dcdee2;
        }
        .bin-checkbox__inner:after {
          -webkit-animation-name: none;
          animation-name: none;
          border-color: #ccc;
        }
      }
    }
    &.is-indeterminate {
      .bin-checkbox__inner {
        border: $border-base;
        background-color: $color-white;
      }
      .bin-checkbox__inner:after {
        content: "";
        width: 8px;
        height: 8px;
        transform: scale(1) translate(-50%, -50%);
        position: absolute;
        left: 50%;
        top: 50%;
        border: none;
        background-color: $color-primary;
      }
    }
  }
  &__original {
    position: absolute;
    opacity: 0;
    outline: none;
    margin: 0;
    width: 0;
    height: 0;
    z-index: -1;
    &[disabled] {
      cursor: not-allowed;
    }
  }

  &:hover {
    .bin-checkbox__inner {
      border-color: $color-primary-light1;
    }
  }
  &.is-disabled {
    .bin-checkbox__label {
      color: #ccc;
      cursor: not-allowed;
    }
  }
}

@keyframes checkEffect {
  0% {
    transform: scale(1);
    opacity: 0.5;
  }
  100% {
    transform: scale(1.4);
    opacity: 0;
  }
}
